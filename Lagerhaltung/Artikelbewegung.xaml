<Window x:Class="Lagerhaltung.Artikelbewegung"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lagerhaltung"
        mc:Ignorable="d"
        Title="Artikelbewegung" Height="450" Width="400">
    <Grid>
        <Grid Margin="190,10,10,10" Width="200">
            <DataGrid AutoGenerateColumns="False" Width="200" HorizontalAlignment="Center" x:Name="dataGridArticle" ItemsSource="{Binding Path=loadDataBinding}" CanUserResizeColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Path=art_id}" Header="Bezeichnung" Width="80" IsReadOnly="true"/>
                    <DataGridTextColumn Binding="{Binding Path=art_id}" Header="Bestand" Width="60" IsReadOnly="true"/>
                    <DataGridTextColumn Binding="{Binding Path=art_id}" Header="Mindest" Width="60" IsReadOnly="true"/>

                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <ComboBox HorizontalAlignment="Left" Margin="32,33,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem Content="Zugang"/>
            <ComboBoxItem Content="Abgang"/>
        </ComboBox>
    </Grid>
</Window>
